<h1 class="jumbotron text-center">My Company</h1>

<section class="col-md-6 col-sm-12">
  <h4>Our employees</h4>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @company.users.each do |user| %>
      <tr>
        <td><%= user %></td>
        <td>
          <a href="#" class="btn btn-primary">
            <i class="glyphicon glyphicon-earphone"></i>
            &nbsp;&nbsp;Call
          </a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section class="col-md-6 col-sm-12">
  <h4>Our departments</h4>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @company.phone_numbers.each do |number| %>
      <tr>
        <td><%= number %></td>
        <td>
          <a href="#" class="btn btn-primary">
            <i class="glyphicon glyphicon-earphone"></i>
            &nbsp;&nbsp;Call
          </a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>


